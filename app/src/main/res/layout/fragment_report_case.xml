<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.marvelwall.ahmedpc.clinicalguidelines"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/fever_bg"
            android:gravity="center"
            android:text="Report a case"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/wizard" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/doctor_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/doctor_hospital"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Hospital"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/doctor_mobile"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Mobile"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:inputType="number"
                />
            <EditText
            android:id="@+id/doctor_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/tv_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:textColorHint="#000"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
                android:inputType="textEmailAddress"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/patient_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/patient_id"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="ID"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/patient_mobile"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Mobile"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/patient_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Diagnosis"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"

                />
            <EditText
                android:id="@+id/patient_notes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/tv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="Notes"
                android:paddingLeft="10dp"
                android:textColorHint="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"


                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/send_email"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fever_bg"
        android:drawableRight="@drawable/send"
        android:drawableTint="#fff"
        android:gravity="center"
        android:text="Send"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        />

</LinearLayout>
</ScrollView>